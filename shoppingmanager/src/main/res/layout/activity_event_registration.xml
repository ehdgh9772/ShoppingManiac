<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_searchItemId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="아이템 검색"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"/>

    <TextView
        android:id="@+id/txv_itemId"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="아이디"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <EditText
        android:id="@+id/edt_itemId"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txv_itemId"
        app:layout_constraintLeft_toRightOf="@+id/txv_itemId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/txv_dcPrice"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="할인가격"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txv_itemId"
        app:layout_constraintRight_toRightOf="@+id/txv_itemId"
        app:layout_constraintTop_toBottomOf="@+id/txv_itemId"/>

    <EditText
        android:id="@+id/edt_dcPrice"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txv_dcPrice"
        app:layout_constraintLeft_toLeftOf="@+id/edt_itemId"
        app:layout_constraintRight_toRightOf="@+id/edt_itemId"/>

    <TextView
        android:id="@+id/txv_startTime"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="시작 날짜"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txv_dcPrice"
        app:layout_constraintRight_toRightOf="@+id/txv_dcPrice"
        app:layout_constraintTop_toBottomOf="@+id/txv_dcPrice"/>

    <EditText
        android:id="@+id/edt_startDate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:hint="20170101"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txv_startTime"
        app:layout_constraintLeft_toLeftOf="@+id/edt_dcPrice"
        />

    <EditText
        android:id="@+id/edt_startTime"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:hint="0800"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txv_startTime"
        app:layout_constraintLeft_toRightOf="@+id/edt_startDate"/>

    <TextView
        android:id="@+id/txv_endTime"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="종료 날짜"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txv_startTime"
        app:layout_constraintRight_toRightOf="@+id/txv_startTime"
        app:layout_constraintTop_toBottomOf="@+id/txv_startTime"/>

    <EditText
        android:id="@+id/edt_endDate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="20170102"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txv_endTime"
        app:layout_constraintLeft_toLeftOf="@+id/edt_startDate"
        app:layout_constraintRight_toRightOf="@+id/edt_startDate"/>

    <EditText
        android:id="@+id/edt_endTime"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:hint="2230"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txv_endTime"
        app:layout_constraintLeft_toRightOf="@+id/edt_endDate"/>

    <TextView
        android:id="@+id/txv_dcType"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="이벤트 종류"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txv_endTime"
        app:layout_constraintRight_toRightOf="@+id/txv_endTime"
        app:layout_constraintTop_toBottomOf="@+id/txv_endTime"/>

    <EditText
        android:id="@+id/edt_dcType"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txv_dcType"
        app:layout_constraintLeft_toLeftOf="@+id/edt_endDate"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_commitEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="등록하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a"/>

</android.support.constraint.ConstraintLayout>
